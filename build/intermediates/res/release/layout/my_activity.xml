<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/white">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="46.669983dip"
            android:background="@drawable/title_bg">

        <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="我 的"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/my_avatar_nick_bg"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/avatar_bg">
        <ImageView
                android:id="@+id/my_avatar_img"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginLeft="30dip"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/my_nick_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dip"
                android:layout_marginLeft="20dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/my_avatar_img"
                />
        <Button
                android:id="@+id/my_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="登 录"
                android:visibility="invisible"
                android:textColor="@color/white"
                android:background="@drawable/buy_btn_shape"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_avatar_nick_bg"
            android:orientation="vertical"
            >
        <View android:layout_height="1px" android:background="#bbbbbb" android:layout_width="fill_parent"></View>
        <RelativeLayout
                android:id="@+id/personal_center_setting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">
            <ImageView
                    android:id="@+id/personal_center_setting_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:background="@drawable/btn_setting"/>
            <TextView
                    android:layout_toRightOf="@id/personal_center_setting_img"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="20dip"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:clickable="true"
                    android:textSize="16dp"
                    android:textColor="@color/black"/>
            <ImageView android:layout_width="10dp"
                       android:layout_height="20dp"
                       android:layout_alignParentRight="true"
                       android:layout_marginRight="10dp"
                       android:layout_centerVertical="true"
                       android:clickable="true"
                       android:background="@drawable/right_arrow"/>
        </RelativeLayout>
        <View android:layout_height="1px" android:background="#bbbbbb" android:layout_width="fill_parent"></View>

        <RelativeLayout
            android:id="@+id/image_upload_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:clickable="true" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:clickable="false"
                android:background="@drawable/btn_setting" />

            <TextView
                android:layout_toRightOf="@+id/imageView"
                android:layout_width="80dip"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:gravity="center_vertical"
                android:text="照片上传"
                android:clickable="false"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:background="@drawable/right_arrow" />
        </RelativeLayout>
        <View android:layout_height="1px" android:background="#bbbbbb" android:layout_width="fill_parent"></View>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/huamulou/work/gits/mandroid1/src/main/res/layout/my_activity.xml -->